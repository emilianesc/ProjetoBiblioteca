@model List<Livro>
@{
    ViewData["Title"] = "Listagem de Livros";
    int FiltroPorPag = Int32.Parse(ViewData["livrosPorPag"].ToString());
    int PaginaAtual = Int32.Parse(ViewData["PagAtual"].ToString());
    
    int NumLivrosPorPag = (Model.Count < FiltroPorPag ? Model.Count : FiltroPorPag);
    int NumTotalPag = 0;
    if (NumLivrosPorPag > 0)
    {
        NumTotalPag = Model.Count / NumLivrosPorPag + (Model.Count % NumLivrosPorPag == 0 ? 0 : 1);
    }
    
    
}
<div class="row">
    <div class="col-md-12">
        <form class="form-inline" method="POST">
            <div class="form-group mb-2">
                <select name="TipoFiltro" class="form-control">
                    <option value="Autor">Autor</option>
                    <option value="Titulo">Título</option>
                </select>
            </div>
            <div class="form-group mb-2 mx-sm-3">
                <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
            </div>

            <div id="SeletorPaginas">
                <span>Página:</span>
                @for(int i=1; i < NumTotalPag; i++){
                    <span><a href="/Livro/Listagem?PaginaAtual=@i">@i</a></span>
                }
            </div>
            <div>
                <select class="form-control" style="margin: 7%;" name="itensPorPag" id="itensPorPag">
                    <option value="10">10 livros</option>
                    <option value="20">20 livros</option>
                    <option value="30">30 livros</option>
                    <option value="40">40 livros</option>
                    <option value="@Model.Count">Todos</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary mb-2" style="margin: 2%; margin-top:1%;">Pesquisar</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            @if (Model.Count > 0)
            {
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titulo</th>
                        <th>Autor</th>
                        <th>Ano</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @for(int i = (PaginaAtual-1) * NumLivrosPorPag; i < (NumLivrosPorPag * PaginaAtual < Model.Count ? NumLivrosPorPag * PaginaAtual : Model.Count); i++)
                    {
                        <tr>
                            <td>@Model[i].Id</td>
                            <td>@Model[i].Titulo</td>
                            <td>@Model[i].Autor</td>
                            <td>@Model[i].Ano</td>
                            <td><a href="/Livro/Edicao/@Model[i].Id">Editar</a></td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <thead>
                    <tr>
                        <th>Ops! Nenhum resultado encontrado.</th>
                    </tr>
                </thead>
            }
        </table>
    </div>
</div>