@model Usuario

<h1 class="row justify-content-md-center">Altere seus dados</h1>

<div class="row justify-content-md-center">

<form action="EditarUsuario" method="post">
    <div class="form-group">
    <input class="form-control" type="text" name="Nome" id="userNome" value="@Model.Nome">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="Login" id="userLogin" value="@Model.Login">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="Senha" id="userSenha" value="@Model.Senha">
    </div>
    <select class="form-control form-group" name="tipo" id="userTipo">
        <option value="@Usuario.admin">Administrador</option>
        <option value="@Usuario.padrao">Padrão</option>
    </select>

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
    <input class="btn btn-primary" type="submit" value="CONCLUIR EDIÇÃO">
    </div>
</form>
</div>