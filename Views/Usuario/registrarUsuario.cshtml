@model Usuario

<h1 class="row justify-content-md-center">Registre-se aqui</h1>

<div class="row justify-content-md-center">

    <form action="RegistrarUsuario" method="post"> 
        <div class="form-group">
        <input class="form-control" type="text" name="Nome" id="userNome" placeholder="Nome">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="Login" id="userLogin" placeholder="Login">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="Senha" id="userSenha" placeholder="Senha">
        </div>
        <select class=" form-group form-control" name="tipo" id="userTipo">
            <option value="@Usuario.admin">Administrador</option>
            <option value="@Usuario.padrao">Padr√£o</option>
        </select>
        <div class="form-group">
        <input class="btn btn-primary" type="submit" value="REGISTRAR">
        </div>
    </form>
</div>